{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./ts",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "*"]
    }
  },
  "include": ["ts/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}